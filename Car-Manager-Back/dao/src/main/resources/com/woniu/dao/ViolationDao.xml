<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu.dao.ViolationDao">
    
    <!--查询取车记录列表-->
    <select id="list" resultType="ViolationRecordPo">
        select * from violation_record
    </select>
    
    <!--添加取车记录-->
    <insert id="add" parameterType="ViolationRecordPo">
        insert into violation_record (carId,type,time,fee,reduceScore,driverId,place,remarks)
        values (#{carId},#{type},#{time},#{fee},#{reduceScore},#{driverId},#{place},#{remarks})
    </insert>
    
    
    <!-- 多条件修改用户数据 -->
    <update id="update" parameterType="ViolationRecordPo">
        update violation_record
        <set>
            <if test="carId !=null and carId!='' ">carId = #{carId},</if>
            <if test="type !=null and type!='' ">type = #{type},</if>
            <if test="time !=null and time!='' ">time = #{time},</if>
            <if test="fee !=null and fee!='' ">fee = #{fee},</if>
            <if test="reduceScore !=null and reduceScore!='' ">reduceScore = #{reduceScore},</if>
            <if test="driverId !=null and driverId!='' ">driverId = #{driverId},</if>
            <if test="place !=null and place!='' ">place = #{place},</if>
            <if test="remarks !=null and remarks!='' ">remarks = #{remarks},</if>
        </set>
        where id = #{id}
    </update>
    
    <!-- 根据id删除 -->
    <delete id = "delete" parameterType="ViolationRecordPo">
        delete from violation_record where id = #{id}
    </delete>
    
    <select id="findbyid" resultType="ViolationRecordPo">
        select * from violation_record where id = #{id}
    
    </select>





</mapper>