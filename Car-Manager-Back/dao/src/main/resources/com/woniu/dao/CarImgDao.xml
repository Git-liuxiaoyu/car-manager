<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniu.dao.CarImgDao">
    <!--sql片段-->
    <sql id="columns">
        id,carId,imgName,direction
    </sql>
    <!--添加-->
    <insert id="add" parameterType="CarImgPo">
        insert into car_img(<include refid="columns"></include>)
        values(null,#{carId},#{imgName},#{direction})
    </insert>
    <!--修改-->
    <update id="update" parameterType="CarImgPo">
        update car_img
        <set>
            <if test="carId!=null">carId=#{carId},</if>
            <if test="imgName!=null">imgName=#{imgName},</if>
            <if test="direction!=null">direction=#{direction},</if>
        </set>
        where id=#{id}
    </update>
    <!--删除-->
    <delete id="delete" parameterType="CarImgPo">
        delete from car_img
        <where>
            carId = #{carId} and direction = #{direction}
        </where>
    </delete>
    <!--查询-->
    <select id="query" parameterType="CarImgPo">
        select * from  car_img
        <where>
            <if test="carId!=null">
                carId = #{carId}
            </if>
            <if test="carId!=null">
                and direction = #{direction}
            </if>
        </where>
    </select>
</mapper>